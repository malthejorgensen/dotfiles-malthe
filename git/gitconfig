[push]
	default = current
	# Quelch messages when local and tracked upstream
	# have different names.
	# See: http://stackoverflow.com/a/17045911/118608
[core]
	editor = /usr/bin/vim
	excludesfile = ~/.gitignore_global
	hooksPath = ~/.git-hooks
	mergetool = sublime
	# mergetool = gvimdiff
[user]
	email = malthe.jorgensen@gmail.com
	name = Malthe JÃ¸rgensen
[diff]
	# tool = gvimdiff
	tool = sublime
	compactionHeuristic = true
[merge]
	# tool = gvimdiff
	tool = sublime
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool]
  # Don't keep `.orig` files around
  keepBackup = false
[mergetool "sourcetree"]
	cmd = ~/Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[mergetool "sublime"]
	cmd = /usr/bin/env subl --new-window --wait \"$MERGED\"; git add \"$MERGED\"
	trustExitCode = true
[mergetool "unconflict"]
  # "bottom" chooses the code from _this_ branch (not `main`/`master`) when rebasing
	cmd = ~/bin/git-unconflict bottom \"$MERGED\" #; git add \"$MERGED\"
	trustExitCode = true
[rerere]
	enabled = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[pull]
	ff = only
[rebase]
  # This is a "cheap" way to have stacked PRs. It's equivalent of always
  # passing --update-refs to `git rebase`
	updateRefs = true
